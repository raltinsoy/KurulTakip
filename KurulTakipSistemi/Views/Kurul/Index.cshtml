@model IEnumerable<KurulTakipSistemi.Models.KurullarView>

<table class="table table-hover table-striped">
    <tr>
        <th>#</th>
        <th>@Html.DisplayNameFor(model => model.KurulAdi)</th>
        <th>@Html.DisplayNameFor(model => model.RaportorAdSoyad)</th>
    </tr>

    @if (@Model != null)
    {
        int sayac=1;
        foreach (var item in Model)
        {
            <tr style="cursor:pointer;" 
                onclick="window.location.href='@Url.Action("Index", "SecilenKurul",
                                        routeValues: new { id = @item.KurulID })'">
                <td>@sayac</td>
                <td>@Html.DisplayFor(modelItem => item.KurulAdi)</td>
                <td>@Html.DisplayFor(modelItem => item.RaportorAdSoyad)</td>
            </tr>
            sayac++;
        }
    }
</table>
