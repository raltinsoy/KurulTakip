@model KurulTakipSistemi.Models.Dosyalar
@{ ViewBag.Title = "Create";
   ViewBag.SolMenuIdUret = Request.RequestContext.RouteData.Values["id"];
}

<script>
    $("#menu3").addClass("active");
</script>

@using (Html.BeginForm("Create", "Dosyalar", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("KurulID", Request.RequestContext.RouteData.Values["id"])

        <div class="form-group">
            @Html.Label("Dosya", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="file" type="file" />
                @Html.ValidationMessageFor(model => model.DosyaAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DosyaAdi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DosyaAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DosyaAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Yukleyen PersNo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("YukleyenPersNo", new { htmlAttributes = new { @class = "form-control", @Value = "7053" } })
                @Html.ValidationMessageFor(model => model.DosyaAdi, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tur, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tur, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
@Html.ActionLink("Geri Git", "Index", "Dosyalar", new { id = @Request.RequestContext.RouteData.Values["id"] }, null)
</div>
